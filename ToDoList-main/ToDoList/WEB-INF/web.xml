<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ToDoList</servlet-name>
        <servlet-class>Controller.ToDoListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ToDoList</servlet-name>
        <url-pattern>/ToDoList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>Controller.LogInServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>Controller.LogOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Shared</servlet-name>
        <servlet-class>Controller.SharedListsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Shared</servlet-name>
        <url-pattern>/Shared</url-pattern>
    </servlet-mapping>


</web-app>